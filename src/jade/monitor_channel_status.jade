extends _main

block title
    title 频道分时状态

//- 引入 模态对话框
include _modal

block content
    div.ui.main.container.raised.segment#container.vh-container
        h2(class="ui header vh-table")
            i(class="sitemap icon")
            div(class="content") 频道分时状态
                span#vh-streamID 流ID:
                    i

        h3.ui.header.dividing 人数/质量分时图
        h3.ui.header.dividing 错误分时图
        h3.ui.header.dividing 分时细节
        table.ui.table.striped.celled.display.nowrap.compact.dataTable(cellspacing='0', width='100%')
            thead
                tr
                    th 时间
                    th 第三方
                    th 直播助手
                    th 移动发起
                    th SRS接收
                    th SRS分发
                    th 多码流转码
                    th HLS切片
                    th HLS同步
                    th HLS回放
                    th 移动
                    th Flash
                    th 文档转换
                    th 截图
            tfoot
                tr
                    th 时间
                    th 第三方
                    th 直播助手
                    th 移动发起
                    th SRS接收
                    th SRS分发
                    th 多码流转码
                    th HLS切片
                    th HLS同步
                    th HLS回放
                    th 移动
                    th Flash
                    th 文档转换
                    th 截图
            tbody

    //- 每个td的list模版
    script(type="text/template" id="tpl_td_list").
        <div class="vh-error-list" data-id="<%- id %>" data-k="<%- k %>">
            <div class="ui list">
            <% _.each(items, function(item, idx) { %>
                <div class="item <%= item.bg %>-bg">
                    <div class="header"><%- item.code %> <%- item.desc %></div>
                    <%- item.date %>
                    <div class="ui top right attached label vh-label vh-label-<%= item.bg %>-bg"><%- item.num %></div>
                </div>
            <% }); %>

            <% if (more) { %>
            <div class="ui accordion">
                <div class="title vh-more">more...</div>
                <div class="content">
                <% _.each(itemsRest, function(item, idx) { %>
                    <div class="item <%= item.bg %>-bg">
                        <div class="header"><%- item.code %> <%- item.desc %></div>
                        <%- item.date %>
                        <div class="ui top right attached label vh-label vh-label-<%= item.bg %>-bg"><%- item.num %></div>
                    </div>
                <% }); %>
                </div>
                </div>
            <% } %>
            </div>
        </div>