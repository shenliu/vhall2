div(class="ui middle aligned center aligned grid vh-login-box")
    div(class="column")
        h2(class="ui vh-color-font header")
            div(class="content") 登录至您的帐号
        form(class="ui large form vh-login-form")
            div(class="ui stacked segment")
                div(class="field")
                    div(class="ui left icon input")
                        i(class="user icon")
                        input(type="text", name="email", placeholder="电子邮件地址")
                div(class="field")
                    div(class="ui left icon input")
                        i(class="lock icon")
                        input(type="password", name="password", placeholder="密码")
                div(class="ui fluid large vh-color-bg submit button") 登录
            div(class="ui error message")
